<UserControl x:Class="LibraryManagement.Clients.Desktop.Domain.Books.Components.BookList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagement.Clients.Desktop.Domain.Books.Components"
             xmlns:resources="clr-namespace:LibraryManagement.Clients.Desktop.Domain.Books.Resources"
             xmlns:mvvm="clr-namespace:LibraryManagement.Clients.Desktop.Mvvm"
             xmlns:loc="clr-namespace:LibraryManagement.Clients.Desktop.Localization"
             mc:Ignorable="d"
             DataContext="{mvvm:Resolve Type={x:Type local:BookListViewModel}, DesignType={x:Type local:BookListViewModelDesignTime}}"
             d:DesignHeight="450" d:DesignWidth="800"
             mvvm:ObservableRecipientActivation.IsEnabled="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Command="{Binding ToggleLoadBooksCommand}" Margin="0,0,0,6">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content"
                            Value="{loc:Loc Key=BookList_LoadBooks, ResourceType={x:Type resources:BookStrings}}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Content"
                                    Value="{loc:Loc Key=BookList_Cancel, ResourceType={x:Type resources:BookStrings}}"/>
                            <Setter Property="Command" Value="{Binding ToggleLoadBooksCancelCommand}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <ListView Grid.Row="1" ItemsSource="{Binding Books}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" FontSize="16" Padding="5"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
</UserControl>
