<UserControl x:Class="LibraryManagement.Clients.Desktop.Domain.Books.Components.BookList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagement.Clients.Desktop.Domain.Books.Components"
             xmlns:resources="clr-namespace:LibraryManagement.Clients.Desktop.Domain.Books.Resources"
             xmlns:mvvm="clr-namespace:LibraryManagement.Clients.Desktop.Mvvm"
             xmlns:loc="clr-namespace:LibraryManagement.Clients.Desktop.Localization"
             mc:Ignorable="d"
             DataContext="{mvvm:Resolve Type={x:Type local:BookListViewModel}, DesignType={x:Type local:BookListViewModelDesignTime}}"
             d:DesignHeight="450" d:DesignWidth="800"
             mvvm:ObservableRecipientActivation.IsEnabled="True">
    <StackPanel>
        <TextBlock Text="{loc:Loc Key=BookList_IsLoading, ResourceType={x:Type resources:BookStrings}}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>  
        </TextBlock>
        <ListView Grid.Row="1" ItemsSource="{Binding Books}">
            <ListView.Style>
                <Style TargetType="ListView">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Style>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" FontSize="16" Padding="5"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
