@using Microsoft.AspNetCore.Components.Forms
<div class="author-form">
    <div class="form-layout">
        <label>
            Author Name:
            <InputText @bind-Value="Model.Name" name="@(nameof(Model.Name))"/>
        </label>
        <button class="btn btn-primary mt-2 create-author-btn" @onclick="HandleSubmit">
            @SubmitButtonText
        </button>
    </div>
</div>

