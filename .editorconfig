# top-most EditorConfig file
root = true

[*]
# Core EditorConfig properties
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
# .NET code style properties (C# files)

# Language keywords instead of framework type names (e.g., int instead of Int32)
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_predefined_type_for_member_access = true:suggestion

# Use 'var' when the type is apparent, otherwise specify the type
csharp_style_var_for_built_in_types = when_on_rhs:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion
csharp_style_namespace_declaration = file_scoped

# Braces on new line (Allman style)
csharp_style_brace_preferences = allman

# New line options
csharp_style_namespace_declaration = block_scoped:suggestion
dotnet_separate_import_directive_groups = true
dotnet_sort_system_directives_first = true

# Naming conventions (example)
[*.{cs,vb}]
# Private fields should start with an underscore
dotnet_naming_rule.private_field_should_start_with_underscore.severity = suggestion
dotnet_naming_rule.private_field_should_start_with_underscore.symbols = private_fields
dotnet_naming_rule.private_field_should_start_with_underscore.style = underscore_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.underscore_style.required_prefix = _
dotnet_naming_style.underscore_style.capitalization = camel_case

# IDE0005: Remove unnecessary imports
dotnet_diagnostic.IDE0005.severity = error
